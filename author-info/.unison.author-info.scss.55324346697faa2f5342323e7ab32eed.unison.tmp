@import '../sites/pbk';

html {
  box-sizing: border-box;
  font-family: sans-serif;
  font-size: 16px;
  -ms-overflow-style: scrollbar;
  -webkit-tap-highlight-color: transparent;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
}

body {
  font-family: $body;
  background-color: $white;
  color: $dark-gray;
  font-size: 1rem;
  line-height: 1.5;
  margin: 0;
  padding-top: 50px;
  padding-top: 3.125rem;
}

a {
  background-color: transparent;
  color: $black;
  text-decoration: none;
  touch-action: manipulation;

  &:active {
    outline-width: 0;
  }

  &:hover {
    text-decoration: underline;
  }
}

img {
  border-style: none;
  vertical-align: middle;
  max-width: 100%;
}

h4 {

}

p {
  margin-bottom: 1rem;
  margin-top: 0;
}

hr {
  margin-top: 1rem;
  margin-bottom: 1rem;
  border: 0;
  border-color: transparent;
  box-sizing: content-box;
  height: 0;
  overflow: visible;
  border-top: 1px solid $light-gray;
}

.post-content {
  width: 100%;
  clear: both;
}

.text-center {
  text-align: center;
}

.m-x-auto {
  margin-right: auto;
  margin-left: auto;
}

.post-content-width {
  width: 100%;
}

.media {
  overflow: hidden;
}

.author-info {
  padding: 0 20px;
  padding: 0 1.25rem;
  margin-top: 0;
  text-align: center;
}

.p-y-2 {
  padding-top: 1.5rem;
  padding-bottom: 1.5rem;
}

.author-info__avatar {
  display: block;
  width: 80px;
  width: 5rem;
  height: 80px;
  height: 5rem;
  margin: 0 auto 18px;
  margin: 0 auto 1.125rem;
  overflow: hidden;
}

.author-info__text {
  display: block;
}

.author-info__heading {
  padding: 0;
  margin-top: 0;
  margin-bottom: 8px;
  margin-bottom: .5rem;
  line-height: 1;
  font-size: 16px;
  font-size: 1rem;

  // color: inherit;

  // font-size: 1.3rem;
  font-weight: 400;
  // line-height: 1.1;
  // margin-bottom: .5rem;
  // margin-top: 0;
  text-transform: $text-transform;
}

.author-info__heading {
  color: $black;
  font-family: $author-info__heading;
}

.author-info__subheader {
  display: block;
  margin: 0 0 16px;
  margin: 0 0 1rem;
  line-height: 1;
  color: $gray;
  font-size: 11px;
  font-size: .6875rem;
}

.author-info__bio {
  font-size: 12px;
  font-size: .75rem;
  color: $black;
  margin: 0;
}

@media (min-width: 48em) {
  .post-content {
    max-width: 700px;
    max-width: 43.75rem;
  }

  .post-content-width {
    max-width: 700px;
    max-width: 43.75rem;
  }

  .author-info {
    padding: 0;
    text-align: left;
  }

  .author-info__avatar {
    display: table-cell;
    vertical-align: top;
    width: 120px;
    width: 7.5 rem;
    height: 120px;
    height: 7.5rem;
  }

  .author-info__text {
    display: table-cell;
    vertical-align: top;
    padding-left: 20px;
    padding-left: 1.25rem;
  }

  .author-info__subheader {
    margin: 0 0 8px;
    margin: 0 0 .5rem;
  }
}
